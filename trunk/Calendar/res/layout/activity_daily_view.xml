<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/test"
    android:paddingLeft="2dp"
    android:paddingRight="2dp" >

    <TextView
        android:id="@+id/dayViewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="15dip"
        android:layout_height="15dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/dayViewHeader"
        android:background="@drawable/button1"
        android:contentDescription="@string/description"
        android:maxHeight="15dip"
        android:paddingLeft="15dp"
        android:paddingTop="5dip" />

    <ImageButton
        android:id="@+id/prevButton"
        android:layout_width="15dip"
        android:layout_height="15dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@id/dayViewHeader"
        android:background="@drawable/button2"
        android:contentDescription="@string/description"
        android:paddingRight="15dp"
        android:paddingTop="5dip" />

    <Space
        android:id="@+id/space1"
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:layout_below="@id/prevButton"
        android:background="@drawable/horizontal_bar" />

    <View
        android:id="@+id/dummyLabel"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/space1"
        android:background="@color/black"
        android:paddingTop="10dip" />

    <View
        android:id="@+id/dummyLabel2"
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:layout_below="@id/dummyLabel"
        android:background="@color/white"
        android:paddingTop="5dip" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dummyLabel2" >
    </ListView>

</RelativeLayout>